<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

    <menu id="apps-menu" label="Applications">
	<item label="Urxvt">
	    <action name="Execute"><command>urxvt</command></action>
	</item>
	<item label="Opera">
	    <action name="Execute"><command>opera</command></action>
	</item>
	<item label="XChat">
	    <action name="Execute"><command>xchat</command></action>
	</item>
	<item label="Xterm">
	    <action name="Execute"><command>xterm</command></action>
	</item>
	<item label="Picasa">
	    <action name="Execute"><command>picasa</command></action>
	</item>
	<item label="Rdesktop">
	    <action name="Execute"><command>rdesktop -u jick -g 100% -K -a 16 jickwin</command></action>
	</item>
	<item label="Rox">
	    <action name="Execute"><command>rox</command></action>
	</item>
    </menu>

    <menu id="sys-menu" label="Exit Host">
	<item label="Reboot">
	    <action name="Execute"><execute>sudo reboot</execute></action>
	</item>
	<item label="Shutdown">
	    <action name="Execute"><execute>sudo shutdown -h now</execute></action>
	</item>
    </menu>

    <menu id="ob-menu" label="Exit ob">
	<item label="Restart">
	    <action name="Restart" />
	</item>
	<item label="Exit">
	    <action name="Exit" />
	</item>
    </menu>

    <menu id="root-menu" label="Openbox 3">
	<separator label="Openbox" />
	<item label="Urxvtc">
	    <action name="Execute"><command>urxvtc -tr</command></action>
	</item>
	<item label="Firefox">
	    <action name="Execute"><command>firefox3-bin</command></action>
	</item>
	<item label="Pidgin">
	    <action name="Execute"><command>pidgin</command></action>
	</item>
	<item label="Skype">
	    <action name="Execute"><command>skype</command></action>
	</item>
	<item label="StarDict">
	    <action name="Execute"><command>stardict</command></action>
	</item>
	<separator />
	<menu id="apps-menu" />
	<menu id="client-list-menu" />
	<item label="Reconfigure">
	    <action name="Reconfigure" />
	</item>
	<menu id="ob-menu" />
	<menu id="sys-menu" />
    </menu>

</openbox_menu>
